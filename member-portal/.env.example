# Aikido Security Credentials
# Copy this file to .env and add your actual credentials
# NEVER commit .env to version control!

AIKIDO_CLIENT_ID=your_client_id_here
AIKIDO_SECRET_KEY=your_secret_key_here

# Optional: Aikido Configuration
AIKIDO_REPOSITORY_NAME=ASR-Member-Portal
AIKIDO_BRANCH_NAME=main

# Azure Entra ID Configuration (required)
VITE_AZURE_CLIENT_ID=your-azure-client-id-here
VITE_AZURE_TENANT_ID=your-azure-tenant-id-here
VITE_REDIRECT_URI=http://localhost:3001

# API Configuration (required)
VITE_API_CLIENT_ID=your-api-client-id-here
# Local development: http://localhost:8080/api/v1
# Production: https://ca-ctn-asr-api-dev.calmriver-700a8c55.westeurope.azurecontainerapps.io/api/v1
VITE_API_BASE_URL=http://localhost:8080/api/v1

# Playwright E2E Testing (optional)
# Portal URL for E2E tests - defaults to deployed Static Web App
# Local: http://localhost:3001
# Deployed: https://calm-pebble-043b2db03.1.azurestaticapps.net
PLAYWRIGHT_BASE_URL=http://localhost:3001

# API URL for deployment tests (curl/Node.js tests)
# Local: http://localhost:8080/api/v1
# Deployed: https://ca-ctn-asr-api-dev.calmriver-700a8c55.westeurope.azurecontainerapps.io/api/v1
API_URL=http://localhost:8080/api/v1

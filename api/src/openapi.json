    "/v1/kvk/upload-document": {
      "post": {
        "tags": [
          "KvK Verification"
        ],
        "summary": "Upload KvK document",
        "description": "Upload a KvK document for verification",
        "operationId": "uploadKvkDocument",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "KvK document file (PDF)"
                  },
                  "legalEntityId": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "kvkNumber": {
                    "type": "string"
                  }
                },
                "required": [
                  "file",
                  "legalEntityId",
                  "kvkNumber"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Document uploaded and verification started",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/KvkVerificationResponse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },

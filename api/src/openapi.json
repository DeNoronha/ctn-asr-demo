          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    },
    "/v1/m2m-clients/{client_id}": {
      "delete": {
        "tags": [
          "M2M Authentication"
        ],
        "summary": "Deactivate M2M client",
        "description": "Deactivate an M2M client. Sets is_active=false and revokes API access immediately.",
        "operationId": "deactivateM2MClient",
        "parameters": [
          {
            "name": "client_id",
            "in": "path",

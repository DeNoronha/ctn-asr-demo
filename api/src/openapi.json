    "/v1/legal-entities/{legal_entity_id}/m2m-clients": {
      "get": {
        "tags": [
          "M2M Authentication"
        ],
        "summary": "List M2M clients for a legal entity",
        "description": "Retrieve all M2M API clients registered for a specific legal entity",
        "operationId": "listM2MClients",
        "parameters": [
          {
            "name": "legal_entity_id",
            "in": "path",
            "required": true,
            "description": "Unique identifier of the legal entity",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/M2MClient"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Valid authentication required"

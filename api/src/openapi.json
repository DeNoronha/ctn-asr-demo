        "summary": "Create M2M client",
        "description": "Create a new M2M API client with OAuth 2.0 Client Credentials. Returns client_id and client_secret (shown only once).",
        "operationId": "createM2MClient",
        "parameters": [
          {
            "name": "legal_entity_id",
            "in": "path",
            "required": true,
            "description": "Unique identifier of the legal entity",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateM2MClientRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "M2M client created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateM2MClientResponse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "description": "Unauthorized - Valid authentication required"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    },
    "/v1/m2m-clients/{client_id}/generate-secret": {
      "post": {

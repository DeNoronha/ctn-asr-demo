  "paths": {
    "/v1/legal-entities": {
      "get": {
        "tags": [
          "Legal Entities"
        ],
        "summary": "Get all legal entities",
        "description": "Retrieve a list of all legal entities registered in the system",
        "operationId": "getAllLegalEntities",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/LegalEntity"
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/v1/legal-entities/{legalEntityId}": {
      "get": {
        "tags": [
          "Legal Entities"
        ],
        "summary": "Get legal entity by ID",
        "description": "Retrieve detailed information about a specific legal entity",
        "operationId": "getLegalEntityById",
        "parameters": [
          {
            "name": "legalEntityId",
            "in": "path",
            "required": true,
            "description": "Unique identifier of the legal entity",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LegalEntity"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },

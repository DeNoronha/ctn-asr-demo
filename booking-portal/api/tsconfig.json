{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": ".",
    "rootDir": ".",
    "sourceMap": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": ["ES2020"]
  },
  "include": [
    "UploadDocument/**/*.ts",
    "GetBookings/**/*.ts",
    "GetBookingById/**/*.ts",
    "GetTenants/**/*.ts",
    "ValidateBooking/**/*.ts",
    "GetDocumentSasUrl/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.js"]
}
